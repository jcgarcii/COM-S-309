<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/drawingButton"
        android:layout_width="180dp"
        android:layout_height="130dp"
        android:text="Draw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/guessingButton"
        android:layout_width="180dp"
        android:layout_height="130dp"
        android:text="Guess"
        app:layout_constraintEnd_toStartOf="@+id/drawingButton"
        app:layout_constraintHorizontal_bias="0.019"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chatLogLobby"
        android:layout_width="402dp"
        android:layout_height="363dp"
        android:text="Chat log.."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/sendChatLobby"
        android:layout_width="112dp"
        android:layout_height="75dp"
        android:layout_marginEnd="4dp"
        android:text="Send"
        app:layout_constraintBottom_toTopOf="@+id/chatLogLobby"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/drawingButton"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/chatEntryLobby"
        android:layout_width="289dp"
        android:layout_height="75dp"
        android:ems="10"
        android:inputType="textLongMessage"
        app:layout_constraintBottom_toTopOf="@+id/chatLogLobby"
        app:layout_constraintEnd_toStartOf="@+id/sendChatLobby"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guessingButton"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>